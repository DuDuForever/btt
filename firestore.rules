rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Logged-in users can only read/write their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Anyone can create a document in the 'premium_requests' collection.
    // This allows the premium request form to be submitted by non-logged-in users.
    match /premium_requests/{requestId} {
      allow create: if true;
      // For now, we are keeping it simple and not allowing read/update/delete.
      allow read, update, delete: if false;
    }
  }
}
